<div class="col-md-6 col-md-offset-3">
  <div class="edit-review-form">
    <h1>Edit Review</h1>

    <%= simple_form_for([@book, @review]) do |b| %>
    <div id="rating-form">Rating </div>
    <%= b.input :comment %>
    <%= b.button :submit, :class => "btn-custom2" %>
    <% end %>
  </div>
</div>

<script type="text/javascript">
$('#rating-form').raty({
  scoreName: "review[rating]",
  path: "/assets/"
});
</script>
